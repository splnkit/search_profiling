        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Top Team Usage (by Role)</title>
      <viz type="treemap_app.treemap">
        <search>
          <query>index=search_profiling search_string=* 
     | fields user, search_string
     | stats count by  user, user_role
     | search NOT roles=can_delete NOT roles=index-manager NOT roles=internal_monitoring_role NOT roles=splunk-system-role NOT roles=cmon_role NOT roles=internal_ops_admin_role</query>
          <earliest>-7d</earliest>
          <latest></latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">all</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <drilldown>
          <link target="_self">/app/SA-search_profiling/user_breakdown?form.roles=$row.roles$&amp;form.user=$row.user$</link>
        </drilldown>
      </viz>
    </panel>
  </row>
</dashboard>